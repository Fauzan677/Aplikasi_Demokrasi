<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warna4"
    tools:context=".DetailKeresahanActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:id="@+id/br_judul1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="65dp"
            android:onClick="back"
            android:layout_height="65dp"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Keresahan"
            android:fontFamily="@font/manrope_bold"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/warna2"
            android:layout_marginLeft="45sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/br_judul1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item_photo1"
            android:layout_width="375dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_gravity="center"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="375dp"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_desc"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/martel_regular"
                    android:textSize="15sp" />

            </LinearLayout>

            <ImageView
                android:onClick="komen"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="end"
                android:layout_marginTop="340dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/komen" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>