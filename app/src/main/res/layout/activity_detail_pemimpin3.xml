<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF6FD"
    tools:context=".detailPemimpinActivity3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-5dp"
        />

    <LinearLayout
        android:id="@+id/dn_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:onClick="back"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DPRD"
            android:fontFamily="@font/manrope_bold"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/warna2"
            android:layout_marginLeft="95sp"
            />
    </LinearLayout>

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_marginTop="35dp"-->
<!--        android:text="DPRD"-->
<!--        android:textAlignment="center"-->
<!--        android:textSize="22dp"-->
<!--        android:textStyle="bold" />-->

    <ImageView
        android:id="@+id/itemHeader1"
        android:layout_width="400dp"
        android:layout_height="170dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/profil_pemimpin" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/DPRD"
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_detailpemimpin"/>


</RelativeLayout>