<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpPage"
    android:background="@color/warna4">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="188dp"
        android:src="@drawable/su_gambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/su_gambar1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUAT AKUN"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/warna2"
        android:layout_below="@+id/su_gambar1"
        android:id="@+id/su_judul"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/su_nama"
        android:layout_below="@+id/su_judul"
        android:orientation="horizontal"
        android:background="@drawable/shape_rectangle_white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/user"
            android:layout_marginTop="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/garis_tegak"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="Username"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/su_email"
        android:layout_below="@+id/su_nama"
        android:orientation="horizontal"
        android:background="@drawable/shape_rectangle_white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:layout_centerHorizontal="true"

        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/email"
            android:layout_marginTop="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/garis_tegak"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="Email"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/su_password"
        android:layout_below="@+id/su_email"
        android:orientation="horizontal"
        android:background="@drawable/shape_rectangle_white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/password"
            android:layout_marginTop="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/garis_tegak"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="Password"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/su_ch_atas"
        android:layout_below="@id/su_password"
        android:text="Biarkan saya tetap masuk"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/su_ch_bawah"
        android:layout_below="@id/su_ch_atas"
        android:text="Email saya tentang informasi menarik"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:onClick="buat"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/su_button_buat"
        android:layout_below="@id/su_ch_bawah"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_rectangle_purple"
        android:layout_marginTop="10dp"
        android:text="Buat Akun"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:id="@+id/su_pilihan"
        android:layout_below="@+id/su_button_buat"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/su_garis_horizontal"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Atau Masuk Dengan"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/su_garis_horizontal"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:id="@+id/su_log_bawah"
        android:layout_below="@+id/su_pilihan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:src="@drawable/su_google_button"
            />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:src="@drawable/su_facebook_button"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/su_log_bawah"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun?"
            />

        <TextView
            android:onClick="masuk"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:id="@+id/lg_txt_daftar"
            />

    </LinearLayout>

</RelativeLayout>