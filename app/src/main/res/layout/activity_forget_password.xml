<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword"
    android:background="@color/warna4">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/fp_back"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fp_judul"
        android:layout_below="@+id/fp_back"
        android:layout_marginTop="10dp"
        android:text="LUPA PASSWORD?"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fp_gambar"
        android:layout_below="@+id/fp_judul"
        android:src="@drawable/fp_gambar"
        android:layout_marginTop="25dp"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="240dp"
        android:id="@+id/fp_box"
        android:layout_below="@+id/fp_gambar"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_rectangle_white"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan email terdaftar Anda di bawah ini untuk
            menerima instruksi pengaturan ulang kata sandi"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            />

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/shape_rectangle_fp"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/email"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/garis_tegak"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:hint="Email"
                android:layout_marginLeft="15dp"
                />

        </LinearLayout>

        <Button
            android:onClick="reset"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_rectangle_purple"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Kirim tautan reset"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/fp_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Ingat kata sandi?"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Gabung"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:id="@+id/lg_txt_daftar"
            />

    </LinearLayout>

</RelativeLayout>